<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LifeRecord</title>
    <link rel='stylesheet' href='/style.css' />
    <link rel='stylesheet' href='/layui/css/layui.css' media="all"/>
  </head>
  <body>
    <div class="content">
        <span class="layui-breadcrumb">
            <a href="javascript:;">用户权限设置</a>
            <a><cite>权限管理</cite></a>
          </span>
      <table class="layui-hide" id="test" lay-filter="test"></table>
      <script type="text/html" id="toolbarDemo">
        <div class="layui-btn-container">
          <button class="layui-btn layui-btn-sm" onclick="addRole()">+添加权限</button>
        </div>
      </script>
      <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
      </script>
    </div>
  </body>
</html>
<script src="/layui/layui.all.js" charset="utf-8"></script>
<script src="/axios/axios.min.js"></script>
<script>
  var table = layui.table;
  table.render({
    elem: '#test'
    ,url:'/api/limits'
    ,toolbar: '#toolbarDemo'
    ,title: '权限表'
    ,cols: [[
      {field:'_id', title:'权限编号', sort: true}
      ,{field:'limitName', title:'权限名'}
      ,{field:'limitRemark', title:'备注'}
     ,{fixed: 'right', title:'操作', toolbar: '#barDemo'}
    ]]
    ,page: true
  });
  
  //监听行工具事件
  table.on('tool(test)', function(obj){
    var data = obj.data;
    if(obj.event === 'del'){
      layer.confirm('确认删除此权限？', function(index){
        axios.delete('/api/limits',{
          params:{
            _id:data._id
          }
        }).then(res=>{
          layer.msg(res.data.message);
        })
        obj.del();
        layer.close(index);
      });
    }
  });

  function addRole(){
    layer.open({
        title:'添加权限',
        type: 2, 
        content: ['/addLimit', 'no'],
        area: ['500px', '300px']
      }); 
  }
</script>
